{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
