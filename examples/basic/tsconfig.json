{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
